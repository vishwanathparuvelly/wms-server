<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- iisnode handler pointing to index.js -->
    <handlers>
      <add name="iisnode" path="index.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="NodeRouting" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Allow static files to be served directly -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="false" />
          </conditions>
          <action type="None" />
        </rule>

        <rule name="DynamicContent">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- iisnode settings: node_env="prod" sets NODE_ENV so the config package loads config/prod.json -->
    <iisnode
      node_env="prod"
      loggingEnabled="true"
      devErrorsEnabled="false"
      flushResponse="true"
      />

    <!-- Pass through Express errors -->
    <httpErrors existingResponse="PassThrough" />

  </system.webServer>
</configuration>
